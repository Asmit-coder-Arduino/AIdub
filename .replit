modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "ffmpeg-full", "imagemagickBig", "libGL"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32933
externalPort = 3002

[[ports]]
localPort = 41071
externalPort = 3001

[[ports]]
localPort = 45519
externalPort = 3000
